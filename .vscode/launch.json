{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension (Hot Reload)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/extension",
				"${workspaceFolder}\\demo"
			],
			"env": {
				"HOT_RELOAD": "true",
				"USE_DEV_UI": ""
			},
			"outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
			"preLaunchTask": "npm: dev - extension"
		},
		{
			"name": "Run Extension (Hot Reload + Dev UI)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/extension",
				"${workspaceFolder}\\demo"
			],
			"env": {
				"HOT_RELOAD": "true",
				"USE_DEV_UI": "true"
			},
			"outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
			"preLaunchTask": "npm: dev - extension"
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/extension",
				"${workspaceFolder}\\demo"
			],
			"env": {
				"HOT_RELOAD": "",
				"USE_DEV_UI": ""
			},
			"outFiles": ["${workspaceFolder}/extension/dist/**/*.js"]
		},
		{
			"name": "Run Extension (Dev UI)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/extension",
				"${workspaceFolder}\\demo"
			],
			"env": {
				"HOT_RELOAD": "",
				"USE_DEV_UI": "true"
			},
			"outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
			"preLaunchTask": "npm: dev - extension"
		}
	]
}
